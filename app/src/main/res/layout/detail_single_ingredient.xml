<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">

    <TextView
        android:id="@+id/ingredient_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/detail_margin_left"
        android:layout_marginStart="@dimen/detail_margin_left"
        android:layout_marginRight="@dimen/detail_margin_right"
        android:layout_marginEnd="@dimen/detail_margin_right"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="50"
        />

    <TextView
        android:id="@+id/ingredient_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/detail_margin_left"
        android:layout_marginStart="@dimen/detail_margin_left"
        android:layout_marginRight="@dimen/detail_margin_right"
        android:layout_marginEnd="@dimen/detail_margin_right"

        app:layout_constraintEnd_toStartOf="@+id/ingredient_description"
        app:layout_constraintStart_toEndOf="@+id/ingredient_quantity"
        tools:text="Cup" />

    <TextView
        android:id="@+id/ingredient_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/detail_margin_left"
        android:layout_marginStart="@dimen/detail_margin_left"
        android:layout_marginRight="@dimen/detail_margin_right"
        android:layout_marginEnd="@dimen/detail_margin_right"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ingredient_measure"
        tools:text="Nutella or other chocolate-hazelnut spread" />
</android.support.constraint.ConstraintLayout>