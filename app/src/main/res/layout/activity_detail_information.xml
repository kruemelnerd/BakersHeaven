<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_detail_container">


    <ImageView
        android:id="@+id/detail_step_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


    <TextView
        android:id="@+id/detail_step_instruction_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@+id/detail_step_image"
        app:layout_constraintStart_toStartOf="@+id/detail_step_image"
        app:layout_constraintTop_toBottomOf="@+id/detail_step_image"
        tools:text="Instruction"
        android:text="@string/detail_step_instruction_label"/>
    <TextView
        android:id="@+id/detail_step_instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remove the bowl from the pot, and using the whisk attachment of your stand mixer, beat the egg white mixture on medium-high speed until stiff peaks form and the outside of the bowl reaches room temperature. I/Choreographer: Skipped 912 frames!  The application may be doing too much work on its main thread."
        app:layout_constraintEnd_toEndOf="@id/detail_step_instruction_label"
        app:layout_constraintStart_toStartOf="@id/detail_step_instruction_label"
        app:layout_constraintTop_toBottomOf="@id/detail_step_instruction_label" />


</android.support.constraint.ConstraintLayout>