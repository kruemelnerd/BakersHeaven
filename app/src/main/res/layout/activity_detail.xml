<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/detail_headline"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/detail_margin_right"
            android:layout_marginLeft="@dimen/detail_margin_left"
            android:layout_marginRight="@dimen/detail_margin_right"
            android:layout_marginStart="@dimen/detail_margin_left"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Chocolate Cheese Cake" />

        <TextView
            android:id="@+id/detail_serving_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/detail_margin_left"
            android:layout_marginStart="@dimen/detail_margin_left"
            android:text="6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_headline" />

        <TextView
            android:id="@+id/detail_serving_number_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/detail_serving_label_margin_left"
            android:layout_marginStart="@dimen/detail_serving_label_margin_left"
            android:text="@string/detail_serving_label"
            app:layout_constraintEnd_toEndOf="@+id/detail_headline"
            app:layout_constraintStart_toEndOf="@+id/detail_serving_number"
            app:layout_constraintTop_toTopOf="@+id/detail_serving_number" />

        <TextView
            android:id="@+id/detail_ingredients_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/detail_margin_left"
            android:layout_marginStart="@dimen/detail_margin_left"
            android:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_serving_number" />

        <TextView
            android:id="@+id/detail_ingredients_number_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/detail_ingredients_number_label"
            app:layout_constraintEnd_toEndOf="@+id/detail_serving_number_label"
            app:layout_constraintStart_toStartOf="@+id/detail_serving_number_label"
            app:layout_constraintTop_toTopOf="@+id/detail_ingredients_number" />

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:elevation="3dp"
            android:layout_margin="@dimen/card_margin"
            app:layout_constraintEnd_toEndOf="@+id/detail_ingredients_number_label"
            app:layout_constraintStart_toStartOf="@+id/detail_ingredients_number"
            app:layout_constraintTop_toBottomOf="@+id/detail_ingredients_number_label">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/detail_recyclerView_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

        </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>


</ScrollView>