<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_movie_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/detail_single_step_image"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@color/cardview_background_color"
                android:src="@drawable/ic_chef_logo" />

            <TextView
                android:id="@+id/detail_single_step_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1."
                android:layout_marginLeft="@dimen/detail_activity_horizontal_margin"
                android:layout_marginRight="@dimen/detail_activity_horizontal_margin"/>

            <TextView
                android:id="@+id/detail_single_step_short_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Dies ist eine kurze Beschreibung."
                android:layout_marginRight="@dimen/detail_activity_horizontal_margin"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>